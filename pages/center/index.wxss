form{
  display: block;
  box-sizing: border-box;
  padding: 10px;
}
.item{
display: flex;
border-bottom: 1px solid #ccc;
font-size: 14px;
color: #3c3c3c;
height: 48px;
line-height: 48px;
}
.item label{
  width: 60px;
  text-align: right;
  margin-right: 5px;
}
.item input{
  flex: 1;
  line-height: 48px;
  height: 48px;
}